<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim_5">

    <LinearLayout
        android:id="@+id/ll_shipping_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_10"
        android:orientation="horizontal"
        android:padding="@dimen/dim_8"
        android:weightSum="2">

        <TextView
            android:id="@+id/shipping_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Owner Last Name:"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/profile_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shipping_address_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="Doe"
            android:textColor="@color/profile_text_data" />
    </LinearLayout>

    <View
        android:id="@+id/view_one_shipping"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_1"
        android:layout_below="@id/ll_shipping_one"
        android:layout_margin="@dimen/dim_4"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/ll_shipping_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_one_shipping"
        android:layout_marginTop="@dimen/dim_4"
        android:orientation="horizontal"
        android:padding="@dimen/dim_8"
        android:weightSum="2">

        <TextView
            android:id="@+id/shipping_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Owner Last Name:"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/profile_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shipping_address_city_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="Doe"
            android:textColor="@color/profile_text_data" />
    </LinearLayout>

    <View
        android:id="@+id/view_two_shipping"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_1"
        android:layout_below="@id/ll_shipping_two"

        android:layout_margin="@dimen/dim_4"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:id="@+id/ll_shipping_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_two_shipping"
        android:layout_marginTop="@dimen/dim_4"
        android:orientation="horizontal"
        android:padding="@dimen/dim_8"
        android:weightSum="2">

        <TextView
            android:id="@+id/shipping_address_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="Owner Last Name:"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/profile_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shipping_address_phone_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="Doe"
            android:textColor="@color/profile_text_data" />
    </LinearLayout>
</RelativeLayout>

