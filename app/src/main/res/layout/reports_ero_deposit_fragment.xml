<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cattechnologies.tpg.activities.Dashboard">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:background="@color/footer_back_ground_color"
        android:gravity="center"
        android:padding="@dimen/dim_20"
        android:text="@string/reports_title"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/search_paid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_margin="@dimen/dim_5"
        android:background="@drawable/rounded_text_edit"
        android:gravity="center"
        android:hint="Search"
        android:imeOptions="actionDone"
        android:inputType="text|textNoSuggestions"
        android:lines="1"
        android:maxLength="20"
        android:padding="@dimen/dim_15"
        android:singleLine="true"
        android:textSize="14sp" />


    <LinearLayout
        android:id="@+id/expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_paid"
        android:layout_marginLeft="@dimen/dim_4"
        android:layout_marginRight="@dimen/dim_4">

        <ExpandableListView
            android:id="@+id/theexpandables"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="@dimen/dim_5"
            android:layout_marginTop="@dimen/dim_5"
            android:background="@android:color/transparent"
            android:childDivider="#7F7F7F"
            android:choiceMode="singleChoice"
            android:divider="#7F7F7F"
            android:dividerHeight="1dp"
            android:groupIndicator="@null"
            android:listSelector="@android:color/darker_gray"
            android:scrollbars="vertical" />


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/search_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="No Data Found"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scroll_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expand"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="?android:dividerHorizontal"
                android:dividerHeight="@dimen/dim_3"
                android:orientation="vertical"
                android:showDividers="beginning">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_330"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/scroll_data"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_marginBottom="@dimen/dim_2">

                    <Button
                        android:id="@+id/prev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dim_2"
                        android:layout_weight=".7"
                        android:gravity="center"
                        android:text="prev" />

                    <HorizontalScrollView
                        android:id="@+id/horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.6">

                        <LinearLayout
                            android:id="@+id/button_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal" />
                    </HorizontalScrollView>

                    <Button
                        android:id="@+id/next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dim_2"
                        android:layout_weight=".7"
                        android:gravity="center"
                        android:text="next" />
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>