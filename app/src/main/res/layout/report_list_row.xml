<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dim_10">


        <TextView
            android:id="@+id/report_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="@dimen/dim_1"
            android:textAllCaps="true"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/report_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/dim_10"
            android:padding="@dimen/dim_1"
            android:paddingRight="@dimen/dim_25"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/report_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/report_rate"
            android:layout_marginTop="@dimen/dim_4"
            android:gravity="left"
            android:padding="@dimen/dim_1"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/report_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/report_rate"
            android:layout_marginTop="@dimen/dim_4"
            android:gravity="right"
            android:padding="@dimen/dim_1"
            android:paddingRight="@dimen/dim_10"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/report_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/report_rate"
            android:layout_marginTop="@dimen/dim_4"
            android:layout_toLeftOf="@id/report_date"
            android:layout_toRightOf="@id/report_account"
            android:gravity="center|right"
            android:padding="@dimen/dim_1"
            android:textColor="@android:color/black"
            android:textSize="12sp" />


    </RelativeLayout>


</RelativeLayout>